---

import { StarkConsolidator } from '../components/StarkConsolidator';
import '../styles/global.css';

const buildTimeIso = new Date().toISOString();
const vercelEnv = process.env.VERCEL_ENV;
const vercelSha = process.env.VERCEL_GIT_COMMIT_SHA;
const vercelCommit = vercelSha ? vercelSha.slice(0, 7) : undefined;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Stark Report Consolidator</title>
	</head>
	<body>
		<StarkConsolidator client:load />
		<footer style="padding: 12px; font-size: 12px; color: #6b7280; font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;">
			Build: {vercelCommit ?? 'local'} • {vercelEnv ?? 'unknown-env'} • {buildTimeIso}
		</footer>
	</body>
</html>
